# Base de données
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/ai_code_review
POSTGRES_DB=ai_code_review
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# Redis
REDIS_URL=redis://localhost:6379

# JWT & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Services URLs (pour développement local)
USER_SERVICE_URL=http://localhost:5001
REVIEW_SERVICE_URL=http://localhost:5002
CODE_ANALYSIS_SERVICE_URL=http://localhost:5003
NOTIFICATION_SERVICE_URL=http://localhost:5004

# IA Services
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=codellama:7b
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Email Configuration (optionnel)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=AI Code Review Assistant <your-email@gmail.com>

# Frontend
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000

# Node.js
NODE_ENV=development
PORT=5000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760  # 10MB en bytes
ALLOWED_FILE_TYPES=.js,.ts,.py,.java,.cpp,.c,.cs,.php,.rb,.go,.rs

# PgAdmin
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000