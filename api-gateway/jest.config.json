{
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/server.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true
}